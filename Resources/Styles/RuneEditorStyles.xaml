<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- LoL Colors -->
    <SolidColorBrush x:Key="LoLBackground" Color="#010A13"/>
    <SolidColorBrush x:Key="LoLDark" Color="#1E2328"/>
    <SolidColorBrush x:Key="LoLGold" Color="#C8AA6E"/>
    <SolidColorBrush x:Key="LoLBlue" Color="#0AC8B9"/>
    <SolidColorBrush x:Key="LoLBorder" Color="#3C3C41"/>
    <SolidColorBrush x:Key="LoLHover" Color="#5B5A56"/>
    
    <!-- Rune Button Style -->
    <Style x:Key="RuneButtonStyle" TargetType="RadioButton">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderBrush" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="RadioButton">
                    <Grid Width="52" Height="52" Margin="4">
                        <Ellipse x:Name="BackgroundEllipse" 
                                Fill="#1E2328" 
                                Stroke="{StaticResource LoLBorder}"
                                StrokeThickness="2"/>
                        
                        <Ellipse x:Name="GlowEllipse"
                                Fill="Transparent"
                                Stroke="{StaticResource LoLGold}"
                                StrokeThickness="0"
                                Opacity="0"/>
                        
                        <Image Source="{Binding Icon, Converter={StaticResource RuneImageConverter}}" 
                               Width="38" 
                               Height="38"
                               x:Name="RuneIcon"
                               Opacity="0.4"
                               RenderTransformOrigin="0.5,0.5">
                            <Image.RenderTransform>
                                <ScaleTransform ScaleX="1" ScaleY="1"/>
                            </Image.RenderTransform>
                        </Image>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="RuneIcon" Property="Opacity" Value="0.7"/>
                            <Setter TargetName="BackgroundEllipse" Property="Fill" Value="{StaticResource LoLHover}"/>
                        </Trigger>
                        <Trigger Property="IsChecked" Value="True">
                            <Setter TargetName="RuneIcon" Property="Opacity" Value="1.0"/>
                            <Setter TargetName="GlowEllipse" Property="StrokeThickness" Value="2"/>
                            <Setter TargetName="GlowEllipse" Property="Opacity" Value="1.0"/>
                            <Setter TargetName="BackgroundEllipse" Property="Fill" Value="#2A2F35"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
    <!-- Keystone Button Style (larger) -->
    <Style x:Key="KeystoneButtonStyle" TargetType="RadioButton" BasedOn="{StaticResource RuneButtonStyle}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="RadioButton">
                    <Grid Width="64" Height="64" Margin="8">
                        <Ellipse x:Name="BackgroundEllipse" 
                                Fill="#1E2328" 
                                Stroke="{StaticResource LoLBorder}"
                                StrokeThickness="2"/>
                        
                        <Ellipse x:Name="GlowEllipse"
                                Fill="Transparent"
                                Stroke="{StaticResource LoLGold}"
                                StrokeThickness="0"
                                Opacity="0"/>
                        
                        <Image Source="{Binding Icon, Converter={StaticResource RuneImageConverter}}" 
                               Width="52" 
                               Height="52"
                               x:Name="RuneIcon"
                               Opacity="0.4"/>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="RuneIcon" Property="Opacity" Value="0.7"/>
                            <Setter TargetName="BackgroundEllipse" Property="Fill" Value="{StaticResource LoLHover}"/>
                        </Trigger>
                        <Trigger Property="IsChecked" Value="True">
                            <Setter TargetName="RuneIcon" Property="Opacity" Value="1.0"/>
                            <Setter TargetName="GlowEllipse" Property="StrokeThickness" Value="3"/>
                            <Setter TargetName="GlowEllipse" Property="Opacity" Value="1.0"/>
                            <Setter TargetName="BackgroundEllipse" Property="Fill" Value="#2A2F35"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
    <!-- Path Button Style -->
    <Style x:Key="PathButtonStyle" TargetType="RadioButton">
        <Setter Property="Background" Value="#1E2328"/>
        <Setter Property="BorderBrush" Value="{StaticResource LoLBorder}"/>
        <Setter Property="BorderThickness" Value="2"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="RadioButton">
                    <Border x:Name="Border"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="8"
                            Padding="12"
                            Margin="4">
                        <StackPanel HorizontalAlignment="Center">
                            <Image Source="{Binding Icon, Converter={StaticResource RuneImageConverter}}" 
                                   Width="56" 
                                   Height="56"
                                   x:Name="PathIcon"
                                   Opacity="0.5"
                                   Margin="0,0,0,8"/>
                            <TextBlock Text="{Binding Name}" 
                                       Foreground="White"
                                       FontSize="13"
                                       FontWeight="SemiBold"
                                       HorizontalAlignment="Center"
                                       x:Name="PathName"/>
                        </StackPanel>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="Border" Property="Background" Value="{StaticResource LoLHover}"/>
                            <Setter TargetName="PathIcon" Property="Opacity" Value="0.8"/>
                        </Trigger>
                        <Trigger Property="IsChecked" Value="True">
                            <Setter TargetName="Border" Property="BorderBrush" Value="{StaticResource LoLGold}"/>
                            <Setter TargetName="Border" Property="BorderThickness" Value="3"/>
                            <Setter TargetName="Border" Property="Background" Value="#2A2F35"/>
                            <Setter TargetName="PathIcon" Property="Opacity" Value="1.0"/>
                            <Setter TargetName="PathName" Property="Foreground" Value="{StaticResource LoLGold}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
    <!-- Section Header -->
    <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource LoLGold}"/>
        <Setter Property="FontSize" Value="18"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Margin" Value="0,0,0,16"/>
        <Setter Property="TextAlignment" Value="Center"/>
    </Style>
    
    <!-- Stat Mod Button -->
    <Style x:Key="StatModButtonStyle" TargetType="RadioButton">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderBrush" Value="Transparent"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="RadioButton">
                    <Grid Width="42" Height="42" Margin="3">
                        <Rectangle x:Name="BackgroundRect"
                                  Fill="#1E2328"
                                  Stroke="{StaticResource LoLBorder}"
                                  StrokeThickness="2"
                                  RadiusX="4"
                                  RadiusY="4"/>
                        
                        <Rectangle x:Name="GlowRect"
                                  Fill="Transparent"
                                  Stroke="{StaticResource LoLGold}"
                                  StrokeThickness="0"
                                  RadiusX="4"
                                  RadiusY="4"
                                  Opacity="0"/>
                        
                        <Image Source="{Binding Icon, Converter={StaticResource RuneImageConverter}}"
                               Width="28"
                               Height="28"
                               x:Name="StatIcon"
                               Opacity="0.4"/>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="StatIcon" Property="Opacity" Value="0.7"/>
                            <Setter TargetName="BackgroundRect" Property="Fill" Value="{StaticResource LoLHover}"/>
                        </Trigger>
                        <Trigger Property="IsChecked" Value="True">
                            <Setter TargetName="StatIcon" Property="Opacity" Value="1.0"/>
                            <Setter TargetName="GlowRect" Property="StrokeThickness" Value="2"/>
                            <Setter TargetName="GlowRect" Property="Opacity" Value="1.0"/>
                            <Setter TargetName="BackgroundRect" Property="Fill" Value="#2A2F35"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
    <!-- Preview Rune Item -->
    <Style x:Key="PreviewRuneItemStyle" TargetType="Border">
        <Setter Property="Background" Value="#1E2328"/>
        <Setter Property="BorderBrush" Value="{StaticResource LoLBorder}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="4"/>
        <Setter Property="Margin" Value="0,4"/>
        <Setter Property="Padding" Value="8"/>
    </Style>
    
</ResourceDictionary>

