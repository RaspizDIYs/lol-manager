<Window x:Class="LolManager.Views.ChangelogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        Title="История изменений" 
        Height="500" 
        Width="700"
        WindowStartupLocation="CenterOwner"
                       ResizeMode="CanResize"
               Icon="/icon.ico">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Заголовок -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <ui:SymbolIcon Symbol="DocumentText24" 
                          Width="32" 
                          Height="32" 
                          Margin="0,0,0,10"/>
            <TextBlock Text="История изменений LolManager" 
                       FontSize="20" 
                       FontWeight="Bold" 
                       HorizontalAlignment="Center"/>
        </StackPanel>
        
        <!-- Changelog -->
        <ui:Card Grid.Row="1" MaxWidth="400" Margin="20,10,20,10" Padding="20" HorizontalAlignment="Center" VerticalAlignment="Stretch">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <RichTextBox x:Name="ChangelogRichTextBox" 
                             IsReadOnly="True" 
                             VerticalScrollBarVisibility="Disabled"
                             FontSize="12"
                             Background="Transparent"
                             BorderThickness="0"
                             Padding="0"/>
            </ScrollViewer>
        </ui:Card>
        
        <!-- Кнопка закрытия -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Margin="0,20,0,0">
            <ui:Button x:Name="CloseButton" 
                       Content="Закрыть" 
                       Appearance="Primary"/>
        </StackPanel>
    </Grid>
</Window>
