<ui:FluentWindow x:Class="LolManager.Views.BindingEditorWindow"
                xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
                Title="Редактор биндингов"
                Width="800"
                Height="600"
                WindowStartupLocation="CenterOwner"
                ResizeMode="CanResize"
                MinWidth="600"
                MinHeight="400"
                ExtendsContentIntoTitleBar="True"
                WindowBackdropType="Mica">
    
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   Text="{Binding ChampionName, StringFormat='Биндинги для: {0}'}"
                   FontSize="18"
                   FontWeight="SemiBold"
                   Margin="0,0,0,16"/>

        <DataGrid Grid.Row="1"
                  ItemsSource="{Binding Bindings}"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  IsReadOnly="False"
                  GridLinesVisibility="Horizontal"
                  HeadersVisibility="Column"
                  SelectionMode="Single"
                  SelectedItem="{Binding SelectedBinding, Mode=TwoWay}"
                  Margin="0,0,0,16">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Действие" 
                                    Binding="{Binding DisplayName}" 
                                    Width="200"
                                    IsReadOnly="True"/>
                <DataGridTextColumn Header="Ключ" 
                                    Binding="{Binding Key}" 
                                    Width="200"
                                    IsReadOnly="True"/>
                <DataGridTextColumn Header="Биндинг" 
                                    Binding="{Binding Value, UpdateSourceTrigger=PropertyChanged}" 
                                    Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right">
            <ui:Button Content="Отмена"
                      Command="{Binding CancelCommand}"
                      Margin="0,0,8,0"
                      Width="100"/>
            <ui:Button Content="Сохранить"
                      Command="{Binding SaveCommand}"
                      Appearance="Accent"
                      Width="100"/>
        </StackPanel>
    </Grid>
</ui:FluentWindow>

