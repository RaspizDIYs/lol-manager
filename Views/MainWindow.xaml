                                        <CheckBox Content="‚ùå ERROR" IsChecked="{Binding LogFilters.ShowError}" Margin="0,0,15,0" ToolTip="–ü–æ–∫–∞–∑–∞—Ç—å –æ—à–∏–±–∫–∏"/>
                                    </StackPanel>
                                    
                                    <!-- –£–ø—Ä–∞–≤–ª–µ–Ω–∏–µ –ª–æ–≥–∞–º–∏ -->
