                                            <TextBlock Text="–ö–∞–Ω–∞–ª –æ–±–Ω–æ–≤–ª–µ–Ω–∏–π:" VerticalAlignment="Center" Margin="0,0,15,0"/>
                                            <ComboBox Width="150" 
                                                      SelectedItem="{Binding UpdateSettings.UpdateChannel}"
                                                      ItemsSource="{Binding UpdateChannels}"/>
                                        </StackPanel>
                                        
                                        <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                                            <TextBlock Text="–ò–Ω—Ç–µ—Ä–≤–∞–ª –ø—Ä–æ–≤–µ—Ä–∫–∏ (—á–∞—Å—ã):" VerticalAlignment="Center" Margin="0,0,15,0"/>
                                            <TextBox Width="80" 
