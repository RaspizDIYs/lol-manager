                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <StackPanel Orientation="Horizontal" Margin="6">
                                    <TextBlock Text="–ù–∞—Å—Ç—Ä–æ–π–∫–∏" Margin="6,0,0,0" FontWeight="SemiBold"/>
                                </StackPanel>
                                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                                    <StackPanel Margin="20">
