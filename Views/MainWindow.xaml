                            <TextBlock Margin="8,0,0,0" Visibility="{Binding IsNavExpanded, Converter={StaticResource BoolToVisibility}}">–õ–æ–≥–∏</TextBlock>
                        </StackPanel>
                    </ui:Button>
        
        <!-- –ò–Ω—Ñ–æ—Ä–º–∞—Ü–∏—è –æ –ø—Ä–∏–ª–æ–∂–µ–Ω–∏–∏ -->
