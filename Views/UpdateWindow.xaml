<Window x:Class="LolManager.Views.UpdateWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        Title="Доступно обновление" 
        Height="400" 
        Width="600"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Заголовок -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <ui:SymbolIcon Symbol="ArrowDownload24" 
                          Width="48" 
                          Height="48" 
                          Margin="0,0,0,10"/>
            <TextBlock Text="Доступно обновление!" 
                       FontSize="24" 
                       FontWeight="Bold" 
                       HorizontalAlignment="Center"/>
            <TextBlock Text="Доступна новая версия LolManager" 
                       FontSize="14" 
                       Foreground="Gray" 
                       HorizontalAlignment="Center" 
                       Margin="0,5,0,0"/>
        </StackPanel>
        
        <!-- Информация об обновлении -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <TextBlock Text="Что нового в этой версии:" 
                           FontWeight="SemiBold" 
                           Margin="0,0,0,10"/>
                <TextBox x:Name="ChangelogTextBox" 
                         IsReadOnly="True" 
                         TextWrapping="Wrap" 
                         VerticalScrollBarVisibility="Auto"
                         Height="200"
                         FontFamily="Consolas"
                         FontSize="12"/>
            </StackPanel>
        </ScrollViewer>
        
        <!-- Кнопки -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Margin="0,20,0,0">
            <ui:Button x:Name="SkipButton" 
                       Content="Пропустить" 
                       Appearance="Secondary" 
                       Margin="0,0,10,0"/>
            <ui:Button x:Name="UpdateButton" 
                       Content="Обновить сейчас" 
                       Appearance="Primary"/>
        </StackPanel>
    </Grid>
</Window>
