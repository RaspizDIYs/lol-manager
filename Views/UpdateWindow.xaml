<ui:FluentWindow x:Class="LolManager.Views.UpdateWindow"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
                 Title="Доступно обновление" 
                 Height="400" 
                 Width="600"
                 WindowStartupLocation="CenterOwner"
                 ResizeMode="NoResize"
                 ExtendsContentIntoTitleBar="True"
                 WindowBackdropType="None"
                 WindowCornerPreference="Round"
                 Icon="/icon.ico">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Заголовок -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <ui:SymbolIcon Symbol="ArrowDownload24" 
                          Width="48" 
                          Height="48" 
                          Margin="0,0,0,10"/>
            <TextBlock Text="Доступно обновление!" 
                       FontSize="24" 
                       FontWeight="Bold" 
                       HorizontalAlignment="Center"/>
            <TextBlock Text="Доступна новая версия LolManager" 
                       FontSize="14" 
                       Foreground="Gray" 
                       HorizontalAlignment="Center" 
                       Margin="0,5,0,0"/>
        </StackPanel>
        
        <!-- Информация об обновлении -->
        <ui:Card Grid.Row="1" MaxWidth="500" Margin="20,10,20,10" Padding="16" HorizontalAlignment="Center" VerticalAlignment="Stretch">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" Text="Что нового в этой версии:" 
                           FontWeight="SemiBold" 
                           HorizontalAlignment="Center"
                           Margin="0,0,0,12"/>
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <RichTextBox x:Name="ChangelogRichTextBox" 
                                 IsReadOnly="True" 
                                 VerticalScrollBarVisibility="Disabled"
                                 FontSize="12"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 Padding="0"/>
                </ScrollViewer>
            </Grid>
        </ui:Card>
        
        <!-- Кнопки -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Margin="0,20,0,0">
            <ui:Button x:Name="SkipButton" 
                       Content="Пропустить" 
                       Appearance="Secondary" 
                       Margin="0,0,10,0"/>
            <ui:Button x:Name="UpdateButton" 
                       Content="Обновить сейчас" 
                       Appearance="Primary"/>
        </StackPanel>
    </Grid>
</ui:FluentWindow>
