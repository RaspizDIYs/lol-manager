<ui:FluentWindow x:Class="LolManager.Views.InfoWindow"
                xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
                Title="Информация о приложении" Height="600" Width="500"
                WindowStartupLocation="CenterOwner"
                ResizeMode="CanResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Grid.Row="0" Text="LolManager" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>

        <!-- Информация о версии -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,15">
            <TextBlock Text="Версия: " FontWeight="SemiBold"/>
            <TextBlock x:Name="VersionTextBlock" Text="{Binding CurrentVersion}" FontWeight="Bold" Foreground="{DynamicResource AccentTextFillColorPrimaryBrush}"/>
        </StackPanel>

        <!-- Информация о системе -->
        <StackPanel Grid.Row="2" Margin="0,0,0,20">
            <TextBlock Text="Системная информация" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,10"/>
            <StackPanel Orientation="Horizontal" Margin="0,5">
                <TextBlock Text="ОС: " FontWeight="SemiBold" Width="120"/>
                <TextBlock x:Name="OSTextBlock"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,5">
                <TextBlock Text=".NET Runtime: " FontWeight="SemiBold" Width="120"/>
                <TextBlock x:Name="RuntimeTextBlock"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,5">
                <TextBlock Text="Архитектура: " FontWeight="SemiBold" Width="120"/>
                <TextBlock x:Name="ArchTextBlock"/>
            </StackPanel>
        </StackPanel>

        <!-- Гиперссылка на changelog -->
        <StackPanel Grid.Row="3" Margin="0,0,0,20">
            <ui:Button Content="📋 Просмотреть историю изменений" 
                       x:Name="ViewChangelogButton"
                       Appearance="Transparent" 
                       HorizontalAlignment="Center"
                       Foreground="{DynamicResource AccentTextFillColorPrimaryBrush}"/>
        </StackPanel>

        <!-- Дополнительная информация -->
        <ScrollViewer Grid.Row="4" VerticalScrollBarVisibility="Auto">
            <TextBlock x:Name="InfoTextBlock" TextWrapping="Wrap" FontFamily="Segoe UI" FontSize="12" Foreground="Gray">
                <Run Text="LolManager - менеджер аккаунтов League of Legends"/>
                <LineBreak/>
                <LineBreak/>
                <Run Text="Функции:"/>
                <LineBreak/>
                <Run Text="• Автоматический вход в Riot Client"/>
                <LineBreak/>
                <Run Text="• Управление несколькими аккаунтами"/>
                <LineBreak/>
                <Run Text="• Безопасное хранение паролей"/>
                <LineBreak/>
                <Run Text="• Мониторинг процессов клиента"/>
                <LineBreak/>
                <Run Text="• Система логирования"/>
                <LineBreak/>
                <Run Text="• Автоматические обновления"/>
                <LineBreak/>
                <LineBreak/>
                <Run Text="Разработано с использованием:"/>
                <LineBreak/>
                <Run Text="• .NET 8.0"/>
                <LineBreak/>
                <Run Text="• WPF + WPFUI"/>
                <LineBreak/>
                <Run Text="• FlaUI (UI Automation)"/>
                <LineBreak/>
                <Run Text="• Velopack (Auto-updates)"/>
                <LineBreak/>
                <Run Text="• CommunityToolkit.Mvvm"/>
            </TextBlock>
        </ScrollViewer>

        <!-- Кнопка закрытия -->
        <ui:Button Grid.Row="5" Content="Закрыть" 
                   x:Name="CloseButton"
                   Appearance="Primary" 
                   HorizontalAlignment="Center" 
                   Padding="20,8" 
                   Margin="0,20,0,0"/>
    </Grid>
</ui:FluentWindow>
